{
    "identifier":"Tapping",
    "usesTrackedData":true,
    "shouldHideActions":["goBackward", "skip"],
    "progressMarkers":[],
    "steps":[
             {
                "identifier":"introduction",
                "type":"overview",
                "title":"Finger Tapping",
                "text":"In this activity, we will measure your finger tapping speed and accuracy with each hand.",
                "permissions":[
                               {
                                "permissionType":"motion",
                                "reason":"Access to Motion and Fitness sensors is used to measure the phone's orientation.",
                                "optional":true
                               }
                            ],
                 "image":{
                     "type":"animated",
                     "imageNames":["TapLeft1", "TapLeft2"],
                     "placementType":"topBackground",
                     "animationDuration": 1
                 },
                "icons": [
                          {
                            "icon":"FlatSurface",
                            "title": "A FLAT SURFACE"
                          }
                        ],
                "actions":{
                    "goForward":{
                        "type":"default",
                        "buttonTitle":"Get started"
                    },
                    "skip":{
                        "type":"reminder",
                        "reminderIdentifier":"Tapping"
                    }
                 }
             },
             {
                "identifier":"fingerTappingInstructions",
                "type":"instruction",
                "title":"You will finger tap for 30 seconds with each hand",
                "text":"Speed and accuracy of finger tapping can show us the fine motor control of your hands. Your doctor might measure this differently.",
                "image":{
                     "type":"animated",
                     "imageNames":["TapLeft1", "TapLeft2"],
                     "placementType":"topBackground",
                     "animationDuration": 1
                },
                "actions":{
                    "goForward":{
                        "type":"default",
                        "buttonTitle":"Got it"
                    }
                }
             },
             {
                "identifier": "handSelection",
                "type": "handSelection"
             },
             {
                "identifier":"phoneOnTableInstruction",
                "type":"handInstruction",
                "title":"Put the phone on a table",
                "text":"Place your phone on a flat surface such as a table before you begin the activity.",
                "image":{
                    "type":"animated",
                    "imageNames": ["F-FlatSurface", "PlacePhone", "PhoneOnSurface"],
                    "animationDuration": 3.0,
                    "placementType": "topBackground"
                },
                "actions":{
                    "goForward":{
                        "type":"default",
                        "buttonTitle":"Did it"
                    }
                }
             },
             {
                "identifier":"tappingFirstHandInstruction",
                "type":"handInstruction",
                "title":"First, tap with your %@ hand",
                "text": "Alternate tapping the buttons that appear with your first and middle finger on your %@ HAND. Keep tapping for 30 seconds and as fast as you can.",
                "image": {
                    "type":"animated",
                    "imageNames": ["TapLeft1", "TapLeft2"],
                    "animationDuration": 1.0,
                    "placementType": "topBackground"
                },
                "actions":{
                    "goForward":{
                        "type":"default",
                        "buttonTitle": "Start the test"
                    }
                }
             },
             {
                 "identifier":"left",
                 "type":"transform",
                 "resourceTransformer": { "resourceName": "TappingSectionStep.json"}
             },
             {
                 "identifier":"right",
                 "type":"transform",
                 "resourceTransformer": { "resourceName": "TappingSectionStep.json"}
             },
             {
                 "identifier":"completion",
                 "type":"completion",
                 "title":"Great job!",
                 "text":"You just completed the Tapping activity.",
                 "image":{
                     "type":"fetchable",
                     "imageName":"Completion-FingerTapping",
                     "placementType":"topBackground"
                 },
                 "viewTheme":{
                     "viewIdentifier":"Completion Tapping",
                     "storyboardIdentifier":"ActiveTaskSteps"
                 },
                 "actions": {
                     "goForward":{
                        "type":"default",
                        "buttonTitle":"Done"
                     }
                 }
             }
        ]
}
